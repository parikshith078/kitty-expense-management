generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id
  username     String        @unique
  passwordHash String
  profileUrl   String?
  sessions     Session[]
  Transaction  Transaction[]
}

model Transaction {
  id         String                     @id
  type       TransactionAndCatagoryType
  user       User                       @relation(fields: [userId], references: [id])
  amount     Float
  userId     String
  catagory   Catagory                   @relation(fields: [catagoryId], references: [id])
  catagoryId String
  desc       String?
}

model Catagory {
  id          String                     @id
  name        String
  iconSrc     String
  type        TransactionAndCatagoryType
  Transaction Transaction[]
}

enum TransactionAndCatagoryType {
  INCOME
  EXPENSE
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}
